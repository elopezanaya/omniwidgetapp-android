<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <EditText
        android:id="@+id/editTextUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter URL"/>

    <EditText
        android:id="@+id/editTextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUrl"
        android:layout_marginTop="16dp"
        android:hint="Enter Data"/>

    <Button
        android:id="@+id/buttonLoadUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextData"
        android:layout_marginTop="16dp"
        android:text="Load URL"
        android:onClick="loadUrl"/>

    <WebView
        android:id="@+id/webviewLCW"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#CDDC39"
        android:layout_marginTop="16dp"
        android:layout_below="@id/buttonLoadUrl"
        >

    </WebView>


</RelativeLayout>
</ScrollView>